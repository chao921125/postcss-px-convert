{
  "name": "font-checker",
  "version": "1.0.0",
  "description": "一个用于检测网页字体是否加载完成的工具，支持 JS/Vue/React，原生 API 实现。",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "unpkg": "dist/index.umd.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && rollup -c",
    "prepublishOnly": "npm run build",
    "publish:npm": "npm publish --access public",
    "test": "jest",
    "test:watch": "jest --watch",
    "type-coverage": "type-coverage --at-least 95 --detail"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourname/font-checker.git"
  },
  "keywords": [
    "font",
    "checker",
    "webfont",
    "font loader",
    "字体检测",
    "font loading"
  ],
  "author": "你的名字 <youremail@example.com>",
  "license": "MIT",
  "devDependencies": {
    "rollup": "^4.0.0",
    "rollup-plugin-terser": "^7.0.2",
    "typescript": "^5.0.0",
    "jest": "^29.0.0",
    "ts-jest": "^29.0.0",
    "@types/jest": "^29.0.0",
    "type-coverage": "^2.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "testMatch": ["**/__tests__/**/*.test.ts"]
  }
} 